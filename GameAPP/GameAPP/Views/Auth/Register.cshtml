@model GameAPP.Models.RegisterModel

@{
    ViewBag.Title = "Регистрация";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="AuthContainer">
        @if (ViewBag.message != "" && ViewBag.message != null )
        {
            <p id="message" style="text-align:center;color:red">"@ViewBag.ThisLogin" @ViewBag.message</p>
        }
        <div class="group">
            <input type="text" id="Login" name="Login" maxlength="15" required onclick="hideMessage()">
            <span class="highlight" data-valmsg-for="Login" data-valmsg-replace="true"></span>
            <span class="bar"></span>
            <label>Введите логин</label>
        </div>

        <div class="group">
            <input type="password" id="Password" name="Password" maxlength="50" required onclick="hideMessage()">
            <span class="highlight" data-valmsg-for="Password" data-valmsg-replace="true"></span>
            <span class="bar"></span>
            <label>Введите пароль</label>
        </div>

        <div class="group">
            <input type="password" id="Password2" name="Password2" maxlength="50" required onclick="hideMessage()">
            <span class="highlight" data-valmsg-for="Password2" data-valmsg-replace="true"></span>
            <span class="bar"></span>
            <label>Повторите пароль</label>
        </div>

        <div class="submit">
            <input type="submit" class="confirm" value="Зарегистрироваться" />
        </div>

    </div>
}

@Scripts.Render("~/Scripts/HideMessage.js")